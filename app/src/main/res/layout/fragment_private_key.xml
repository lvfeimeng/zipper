<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.PrivateKeyFragment">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <!--android:background="@drawable/bg_radiogroup"-->
        <RadioButton
            android:id="@+id/raido_cleartext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_raidobutton_left"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="明文私钥"
            android:textColor="@color/raido_text2"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/raido_ciphertext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_raidobutton_right"
            android:button="@null"
            android:gravity="center"
            android:text="加密私钥"
            android:textColor="@color/raido_text2"
            android:textSize="14sp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>