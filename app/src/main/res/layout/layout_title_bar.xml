<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_lin_height"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zipper.wallet.definecontrol.ChildClickableLinearLayout
            android:id="@+id/lin_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:src="@mipmap/back_black"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_major"
                android:textSize="16sp"
                android:text=""/>

        </com.zipper.wallet.definecontrol.ChildClickableLinearLayout>

        <LinearLayout
            android:id="@+id/lin_between"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_major"
                android:textSize="18sp"
                android:text=""/>

        </LinearLayout>
        <com.zipper.wallet.definecontrol.ChildClickableLinearLayout
            android:id="@+id/lin_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_normal"
                android:textSize="16sp"
                android:text=""/>

        </com.zipper.wallet.definecontrol.ChildClickableLinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_major"
            android:layout_marginLeft="24dp"
            android:textSize="32sp"
            android:text=""/>

    </LinearLayout>

</LinearLayout>