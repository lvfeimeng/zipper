<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_wallet"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/wallet_home_bg">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_setting"/>

        <TextView
            android:id="@+id/text_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_wallet_address"
            android:layout_marginLeft="24dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginRight="68dp"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="32sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_trading_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/menu_trading_record"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="交易记录"
            android:textColor="@color/text_major"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_badger"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:text=""
            android:textColor="@color/text_link"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_contacts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@mipmap/menu_contact"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="联系人"
        android:textColor="@color/text_major"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/line_input"/>

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/menu_language_setting"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="语言设置"
            android:textColor="@color/text_major"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_language"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:text="简体中文"
            android:textColor="@color/text_link"
            android:textSize="14sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_gesture_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:button="@null"
        android:drawableLeft="@mipmap/menu_gesture_password"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/property_checkbox"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="手势密码"
        android:textColor="@color/text_major"
        android:textSize="18sp" />

</LinearLayout>