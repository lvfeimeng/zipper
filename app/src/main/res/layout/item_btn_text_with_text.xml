<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_item_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_lin_height"
        android:background="@drawable/ripple_gray_with_white_mask"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/text_padding_left"
        android:paddingRight="@dimen/text_padding_left">

        <TextView
            android:id="@+id/txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/text_major"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_red_point"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
        <TextView
            android:id="@+id/txt_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_major"
            android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_right_red_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle_red"
                android:visibility="gone"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/text_padding_left"
        android:background="@color/line_input" />

</LinearLayout>