<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ObserveFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/observe_hint"
                android:textColor="@color/line_input"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/editWalletAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:hint="扫码或输入钱包地址"
                android:maxLines="1"
                android:padding="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line_input" />


            <Button
                android:id="@+id/btnImport"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="开始导入"
                android:layout_marginTop="30dp"
                android:background="@color/btn_normal"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:background="@color/yellow_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/observe_hint"
                android:textColor="@color/line_input"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/textOfflineSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何使用冷钱包进行离线签名？"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/btn_normal"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>