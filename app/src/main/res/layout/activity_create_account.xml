<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_lin_height">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_lin_height"
        android:background="@color/green_deep">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="Zipper Wallet 不存储密码，请务必牢记"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_name"
            android:hint="钱包名称"
            style="@style/EditText_register"

            />
        <EditText
            android:id="@+id/ed_pwd"
            android:hint="密码"
            android:inputType="textPassword"
            style="@style/EditText_register"

            />
        <EditText
            android:id="@+id/ed_repeat"
            android:inputType="textPassword"
            android:hint="重复密码"
            style="@style/EditText_register"

            />
        <EditText
            android:id="@+id/ed_pwd_tip"
            style="@style/EditText_register"
            android:hint="密码提示（选填）"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="我已经仔细阅读并同意服务及隐私条款"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_create"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:theme="@style/btn_sky_blue"
            android:text="创建账户"/>
    </LinearLayout>

    
    
</LinearLayout>
