<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/text_minor"
                android:startColor="@color/line_input" />

            <corners
                android:bottomLeftRadius="@dimen/circle_big_radius"
                android:bottomRightRadius="@dimen/circle_big_radius"
                android:topLeftRadius="@dimen/circle_big_radius"
                android:topRightRadius="@dimen/circle_big_radius" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/line_input"
                android:startColor="@color/line_input" />

            <corners
                android:bottomLeftRadius="@dimen/circle_big_radius"
                android:bottomRightRadius="@dimen/circle_big_radius"
                android:topLeftRadius="@dimen/circle_big_radius"
                android:topRightRadius="@dimen/circle_big_radius" />
        </shape>
    </item>
</layer-list>